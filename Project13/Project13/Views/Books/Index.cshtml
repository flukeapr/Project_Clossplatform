@model IEnumerable<Project13.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center"><h2>Book</h2></div>


<p>
    <div class="row text-right">
        <button class="btn" style="background-color: #F89E6C; border-radius: 10px;">
            @Html.ActionLink("Create New", "Create", null, new { style = "color: #3F3F3F; text-decoration: none;" })
        </button>
    </div>
</p>

<div class="container">
    @for (var i = 1; i <= Model.ToList().Count(); i++) {
        var indexItem = i - 1;
        if (i==1 || i%4 == 1)
                {
                    @:<div class="row">
                }
                            <div class="col-md-3">
                                <div class="thumbnail">
                                    <a href="#" onclick="navigateToDetails(@Model.ElementAt(indexItem).Book_Id)">
                                        <img class="img-responsive" style="max-width: 70%;" src="@Url.Content("~/Content/Book_Image/" + (Model.ElementAt(indexItem).Image))" />
                                    </a>
                                    <div class="caption">
                                        <h3> @Model.ElementAt(indexItem).Book_Name </h3>
                                        <h5> โดย: @Model.ElementAt(indexItem).Author </h5>
                                        <h5>สำนักพิม: @Model.ElementAt(indexItem).Publisher </h5>
                                        <h5>ราคา: @Model.ElementAt(indexItem).Price </h5>
                                        <div style=" display: flex; justify-content: flex-end;">
                                            <button class="btn" style="background-color: #F7CD81; border-radius: 14px; ">
                                                <h5>@Model.ElementAt(indexItem).Price</h5>
                                            </button>
                                        </div>

                                    </div>

                                </div>
                            </div>
            if(i%4==0){
            @:</div>
            }
    }
</div>
<script>
    function navigateToDetails(bookId) {
        window.location.href = '@Url.Action("Details", "Books")/' + bookId;
    }
</script>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Book_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Short_Story)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Publisher)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Book_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Short_Story)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Publisher)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        
                        <img src=@Url.Content("~/Content/Book_Image/"+(item.Image)) style="width: 100px;height: auto" />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Book_Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Book_Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Book_Id })
                    </td>
                </tr>
            }

        </table>
